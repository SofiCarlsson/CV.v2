@model List<CV_v2.Models.User>


<form method="post" asp-controller="Account" asp-action="Logout">
    @if (User.Identity.IsAuthenticated)
    {
        <h4>Du är inloggad som @User.Identity.Name</h4>
        <input type="submit" value="Logga ut" />
    }
</form>

<h2>Användare: </h2>

<div>
    <a asp-controller="CV" asp-action="Create" class="btn">Skapa ett CV</a>
</div>

<form asp-controller="User" form asp-action="Index" method="get">
    <label for="firstNameFilter">Filtrera på förnamn:</label>
    <input type="text" id="firstNameFilter" name="id" placeholder="Skriv in förnamn" />
    <button type="submit">Filter</button>
</form>

<table class="table">
    <thead>
        <td>ID</td>
        <td>Firstname</td>
        <td>Lastname</td>
        <td>Email</td>
        <td>Användarnamn</td>
        <td>Password</td>
        <td>CV</td>
    </thead>
    <tbody>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.PasswordHash</td>
                <td>
                @if (User.Identity.IsAuthenticated) 
                {
                    @if (user.CV != null)
                    {
                        <!-- Om användaren har ett CV, visa redigera-knappen -->
                        <a asp-controller="CV" asp-action="Edit" asp-route-id="@user.CV.CVId" class="btn btn-warning">Redigera CV</a>
                    }
                    else
                    {
                        <!-- Om användaren inte har ett CV, visa skapa-knappen -->
                        <a asp-controller="CV" asp-action="Create" asp-route-id="@user.Id" class="btn btn-primary">Skapa CV</a>
                    }
                }
                

                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="User" asp-action="Add" class="btn">Lägg till ny Användare</a>
</div>
<div>
    <a asp-controller="User" asp-action="Test" class="btn">Test</a>
</div>

<br />
<br />
<br />
@if (!User.Identity.IsAuthenticated)
{
    <a asp-action="Login" asp-controller="Account">Logga in</a>
}


