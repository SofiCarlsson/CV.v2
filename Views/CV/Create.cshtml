@model CV_v2.Models.CV

@{
    ViewData["cv"] = "Create CV";
}

<h2>Skapa nytt CV</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Competences" class="control-label"></label>
        <input asp-for="Competences" class="form-control" />
        <span asp-validation-for="Competences" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Education" class="control-label"></label>
        <input asp-for="Education" class="form-control" />
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkExperience" class="control-label"></label>
        <input asp-for="WorkExperience" class="form-control" />
        <span asp-validation-for="WorkExperience" class="text-danger"></span>
    </div>

    <!-- Här kan du eventuellt lägga till UserId för den inloggade användaren -->
    <input type="hidden" asp-for="UserId" value="@User.Identity.Name" />

    <button type="submit" class="btn btn-primary">Skapa CV</button>
</form>

