@model CV_v2.Models.CV

<h2>Skapa CV</h2>

@if (TempData["ErrorMessage"] != null)
{
     <div class="alert alert-danger"> 
         @TempData["ErrorMessage"] </div>
}

<form asp-action="Create" asp-controller="CV" method="post">
    <input type="hidden" asp-for="UserId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="Description">Beskrivning:</label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
    </div>

    <p>För att välja flera alternativ i Kompetens, Utbildning och Arbetserfarenhet:</p>
    <ul>
        <li>På <strong>Windows</strong>: Håll ner <strong>Ctrl</strong> och klicka på alternativen du vill lägga till med vänster musknapp.</li>
        <li>På <strong>Mac</strong>: Håll ner <strong>Cmd (⌘)</strong> och klicka på alternativen du vill lägga till med vänster musknapp.</li>
    </ul>

    <div class="form-group">
        <label for="Competences">Kompetenser:</label>
        <select asp-for="Competences" asp-items="@ViewBag.CompetenceOptions" class="form-control" multiple></select>
    </div>
    <div class="form-group">
        <label for="Educations">Utbildning:</label>
        <select asp-for="Educations" asp-items="@ViewBag.EducationOptions" class="form-control" multiple></select>
    </div>
    <div class="form-group">
        <label for="WorkExperiences">Arbetserfarenhet:</label>
        <select asp-for="WorkExperiences" asp-items="@ViewBag.WorkExperienceOptions" class="form-control" multiple></select>
    </div>
    <button type="submit" class="btn btn-success mt-3">Skapa CV</button>
</form>

<!-- Knapp för att navigera till redigera CV -->
<form asp-action="Edit" asp-controller="CV">
    <button type="submit" class="btn btn-warning">Redigera CV</button>
</form>

<a asp-controller="CV" asp-action="AddCompetence" class="btn btn-primary">Lägg till ny kompetens</a>

<a asp-controller="CV" asp-action="AddEducation" class="btn btn-primary">Lägg till ny utbildning</a>

<a asp-controller="CV" asp-action="AddWorkExperience" class="btn btn-primary">Lägg till ny arbetserfarenhet</a>
