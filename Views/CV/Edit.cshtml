@model CV_v2.Models.CV

<h2>Redigera CV</h2>

<form asp-action="Edit" asp-controller="CV" method="post">
    <input type="hidden" asp-for="CVId" />
    <input type="hidden" asp-for="User" />

    <div class="form-group">
        <label for="Description">Beskrivning:</label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Competences">Kompetenser:</label>
        <select asp-for="Competences" asp-items="@ViewBag.CompetenceOptions" class="form-control" multiple></select>
    </div>

    <div class="form-group">
        <label for="Educations">Utbildning:</label>
        <select asp-for="Educations" asp-items="@ViewBag.EducationOptions" class="form-control" multiple></select>
    </div>

    <div class="form-group">
        <label for="WorkExperiences">Arbetserfarenhet:</label>
        <select asp-for="WorkExperiences" asp-items="@ViewBag.WorkExperienceOptions" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Spara ändringar</button>
</form>

