@model EditProfileViewModel

<h2>Redigera Profil</h2>

<!-- Visa bekräftelsemeddelande om det finns något i TempData -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="Firstname">Förnamn</label>
        <input type="text" class="form-control" id="Firstname" name="Firstname" value="@Model.Firstname" required />
    </div>
    <div class="form-group">
        <label for="Lastname">Efternamn</label>
        <input type="text" class="form-control" id="Lastname" name="Lastname" value="@Model.Lastname" required />
    </div>
    <div class="form-group">
        <label for="Email">E-post</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="CVId">CV</label>
        <select class="form-control" id="CVId" name="CVId">
            <option value="0">Inget CV</option>
            @if (ViewBag.CVOptions != null)
            {
                @foreach (var cv in ViewBag.CVOptions)
                {
                    <option value="@cv">@cv</option>
                }
            }
            else
            {
                <p>Inga CV-alternativ tillgängliga.</p>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Uppdatera</button>
</form>

<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <label for="PictureFile">Välj en bild:</label>
    <input type="file" name="Cv.PictureFile" id="PictureFile" />
    <button type="submit">Ladda upp</button>
</form>