@model CV_v2.Models.Project
@{
    ViewBag.Title = "Redigera projekt";
}

<h2>Redigera projekt</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProjectID" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedBy" class="control-label">Created By</label>
        <select asp-for="CreatedBy" class="form-control" asp-items="ViewBag.Users"></select>
        <span asp-validation-for="CreatedBy" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
    <a asp-action="ShowProjects" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
