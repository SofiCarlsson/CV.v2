<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CV_v2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV_v2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CV_v2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                                <li class="nav-item">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <!-- Om användaren är inloggad, visa fliken för CV -->
                                        <a class="nav-link text-dark" asp-controller="CV" asp-action="Create">CV</a>
                                    }
                                </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Project" asp-action="ShowProjects">Projekt</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="User" asp-action="ShowUsers" class="btn">Användare</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Profile" asp-action="CVSite">Din profil</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Profile" asp-action="Edit">Redigera din profil</a>
                        </li>
                        <li class="nav-item align-content-end">
                            <a class="nav-link text-dark" asp-controller="Message" asp-action="ShowMessages"> 
                                <i class="bi bi-envelope"></i> <!-- Meddelande-ikon -->
                                </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CV_v2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
